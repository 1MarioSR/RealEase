@using RealEase.Domain.Entities
@model Contract

@{
    ViewData["Title"] = "Create";
}

<h1>Create Contract</h1>

<h4>Contract</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            
            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> ClientId</label>
                </div>
                <div class="col-md-6">
                    <input type="number" step="1" class="form-control" id="clientIdInput" />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> AgentId</label>
                </div>
                <div class="col-md-6">
                    <input type="number" step="1" class="form-control" id="agentIdInput" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> PropertyId</label>
                </div>
                <div class="col-md-6">
                    <input type="number" step="1" class="form-control" id="propertyIdInput" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> StartDate</label>
                </div>
                <div class="col-md-6">
                    <input type="date" class="form-control" id="startDateInput" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> EndDate</label>
                </div>
                <div class="col-md-6">
                    <input type="date" class="form-control" id="endDateInput" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> MonthlyAmount</label>
                </div>
                <div class="col-md-6">
                    <input class="form-control" id="monthlyAmountInput" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-2">
                    <label class="form-label col-md-5"> Status</label>
                </div>
                <div class="col-md-6">
                    <input class="form-control" id="statusInput" />
                </div>
            </div>

         


            

        </form>
    </div>
</div>

<button id="addContractButton" class="btn btn-primary">
    Save
</button>
<a href="/Contracts" class="btn btn-secondary"> Cancel</a>
    

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#addContractButton').click(function (e) {
                e.preventDefault();
                var newContract = {
                    ClientId: $('#clientIdInput').val(),
                    AgentId: $('#agentIdInput').val(),
                    PropertyId: $('#propertyIdInput').val(),
                    StartDate: $('#startDateInput').val(),
                    EndDate: $('#endDateInput').val(),
                    MonthlyAmount: $('#monthlyAmountInput').val(),
                    Status: $('#statusInput').val()
                };
                $.ajax({
                    url: 'https://localhost:7012/Contract/AddContract',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newContract),
                    success: function (data) {
                        alert('Contract added successfully with ID: ' + data.id);
                        window.location.href = 'Index';
                    },
                    error: function (error) {
                        console.log('Error:', error);
                    }
                });
            });
        });
    </script>

}
