@using RealEase.Domain.Entities
@model Contract

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<h1 class="text-center text-info">Detalles del Contrato</h1>

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <h4 class="card-title text-secondary">Información del Contrato</h4>
            <dl class="row">
                <dt class="col-sm-3">ID Cliente</dt>
                <dd class="col-sm-9">@Model.ClientId</dd>

                <dt class="col-sm-3">ID Agente</dt>
                <dd class="col-sm-9">@Model.AgentId</dd>

                <dt class="col-sm-3">ID Propiedad</dt>
                <dd class="col-sm-9">@Model.PropertyId</dd>

                <dt class="col-sm-3">Fecha de Inicio</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Fecha de Finalización</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Monto Mensual</dt>
                <dd class="col-sm-9">@Model.MonthlyAmount.ToString("C")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.Id">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
