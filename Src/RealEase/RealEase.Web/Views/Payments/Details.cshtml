@using RealEase.Domain.Entities
@model Payment

@{
    ViewData["Title"] = "Detalles del Pago";
}

<h1 class="text-center text-primary">Detalles del Pago</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h4 class="card-title text-secondary">Información del Pago</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Contrato ID</dt>
                        <dd class="col-sm-8">@Model.ContractId</dd>

                        <dt class="col-sm-4">Inquilino ID</dt>
                        <dd class="col-sm-8">@Model.TenantId</dd>

                        <dt class="col-sm-4">Fecha de Pago</dt>
                        <dd class="col-sm-8">@Model.PaymentDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Monto</dt>
                        <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>

                        <dt class="col-sm-4">Método de Pago</dt>
                        <dd class="col-sm-8">@Model.PaymentMethod</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
