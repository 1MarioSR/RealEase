@using RealEase.Domain.Entities
@model Payment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ContractId
        </dt>
        <dd class="col-sm-10">
            @Model.ContractId
        </dd>
        <dt class="col-sm-2">
            TenantId
        </dt>
        <dd class="col-sm-10">
            @Model.TenantId
        </dd>
        <dt class="col-sm-2">
            PaymentDate
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentDate
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            PaymentMethod
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentMethod
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
