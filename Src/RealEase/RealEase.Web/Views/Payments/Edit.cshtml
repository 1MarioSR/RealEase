@using RealEase.Domain.Entities
@model Payment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editPaymentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="ContractId"></label>
                <input type="number" step="1" class="form-control" id="contractIdInput" name="contractId" value="@Model.ContractId" />
            </div>

            <div class="form-group">
                <label asp-for="TenantId"></label>
                <input type="number" step="1" class="form-control" id="tenantIdInput" name="tenantId" value="@Model.TenantId" />
            </div>

            <div class="form-group">
                <label asp-for="PaymentDate"></label>
                <input type="date" class="form-control" id="paymentDateInput" name="PaymentDate" value="@Model.PaymentDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label asp-for="Amount"></label>
                <input class="form-control" id="amountInput" name="Amount" value="@Model.Amount" />
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethod"></label>
                <input class="form-control" id="paymentMethodInput" name="PaymentMethod" value="@Model.PaymentMethod" placeholder="Ej. Tarjeta De Credito" />
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <input class="form-control" id="statusInput" name="Status" value="@Model.Status" placeholder=" Ej. Disponible" />
            </div>

            <button type="button" id="UpdatePaymentButton" class="btn btn-primary">Save</button>
            <a href="/Payments" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#UpdatePaymentButton').click(function (e) {
                e.preventDefault();
                var paymentId = $('input[name="Id"]').val();

                console.log('Payment ID:', paymentId);

                var updatedPayment = {
                    Id: paymentId,
                    ContractId: $('#contractIdInput').val(),
                    TenantId: $('#tenantIdInput').val(),
                    PaymentDate: $('#paymentDateInput').val(),
                    Amount: $('#amountInput').val(),
                    PaymentMethod: $('#paymentMethodInput').val(),
                    Status: $('#statusInput').val()
                };

                $.ajax({
                    url: 'https://localhost:7012/Payment/UpdatePayment/' + paymentId,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(updatedPayment),
                    success: function () {
                        alert('Payment updated successfully');
                        window.location.href = '/Payments';
                    },
                    error: function (error) {
                        console.log('Error:', error);
                        alert('An error occurred while updating the payment.');
                    }
                });
            });
        });
    </script>
}
