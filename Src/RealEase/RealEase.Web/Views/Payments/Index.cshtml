@using RealEase.Web.ViewsModels
    @model PaymentsViewModel

@{
    ViewData["Title"] = "Payment List";


}



<h2 class="text-primary">All Payments</h2>
<a class="btn btn-primary" id="addPaymentButton"> Add </a>



<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-secondary">All Payments</h4>
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>ContractId </th>
                    <th>TenantId</th>
                    <th>PaymentDate</th>
                    <th>Amount</th>
                    <th>PaymentMethod</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            <tbody id="PaymentsTableBody">
                <tr>
                    <td colspan="8">No Records found</td>
                </tr>
            </tbody>  
            </table>
    </div>
</div>


@section Scripts
{
    <script>

        $(document).ready(function () {
            loadPayments();

            $('#addPaymentButton').click(function () {
                window.location.href = 'https://localhost:7146/Payments/Create';
            });

            $(document).on('click', '.delete-Payment', function () {
                var PaymentId = $(this).data('id');
                if (confirm('Are you sure you want to delete this Payment?')) {
                    $.ajax({
                        url: 'https://localhost:7012/Payment/DeletePayment/' + PaymentId,
                        type: 'DELETE',
                        success: function () {
                            alert('Payment deleted successfully');
                            loadPayments();
                        },
                        error: function (error) {
                            console.log('Error:', error);
                        }
                    });
                }
            });

            $(document).on('click', '.edit-Payment', function () {
                var PaymentId = $(this).data('id');
                window.location.href = 'https://localhost:7146/Payments/Edit/' + PaymentId;
            });

        });

        function loadPayments() {
            $.ajax({
                url: 'https://localhost:7012/Payment/GetPayments',
                type: 'GET',
                success: function (data) {
                    var tableBody = '';
                    if (data.length === 0) {
                        tableBody = '<tr><td colspan="8">No Records found</td></tr>';
                    } else {
                        $.each(data, function (index, Payment) {
                            tableBody += '<tr>' +
                                '<td>' + Payment.id + '</td>' +
                                '<td>' + Payment.contractId + '</td>' +
                                '<td>' + Payment.tenantId + '</td>' +
                                '<td>' + Payment.paymentDate + '</td>' +
                                '<td>' + Payment.amount + '</td>' +
                                '<td>' + Payment.paymentMethod + '</td>' +
                                '<td>' + Payment.status +
                                '<td>' +
                                '<a class="btn btn-warning edit-Payment" data-id="' + Payment.id + '">Edit</a> ' +
                                '<button class="btn btn-danger delete-Payment" data-id="' + Payment.id + '">Delete</button>' +
                                '</td>' +
                                '</tr>';
                        });
                    }
                    $('#PaymentsTableBody').html(tableBody);


                },
                error: function (error) {
                    console.log('Error:', error);
                }
            });
        }

    </script>

}