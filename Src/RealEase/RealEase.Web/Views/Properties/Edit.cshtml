@using RealEase.Domain.Entities
@model Propertie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editPropertieForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" id="titleInput" name="Title" value="@Model.Title" />
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input class="form-control" type="url" id="imageInput" name="Image" value="@Model.Image" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" id="descriptionInput" name="Description" value="@Model.Description" />
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input class="form-control" id="addressInput" name="Address" value="@Model.Address" />
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input class="form-control" id="priceInput" name="Price" value="@Model.Price" />
            </div>

            <div class="form-group">
                <label asp-for="PropertyType"></label>
                <input class="form-control" id="propertyTypeInput" name="PropertyType" value="@Model.PropertyType"/>
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <input class="form-control" id="statusInput" name="Status" value="@Model.Status"  placeholder=" Ej. Disponible" />
            </div>

            <div class="form-group">
                <label asp-for="OwnerId"></label>
                <input type="number" step="1" class="form-control" id="ownerIdInput" name="OwnerId" value="@Model.OwnerId" />
            </div>

            

            <button type="button" id="UpdatePropertieButton" class="btn btn-primary">Save</button>
            <a href="/Properties" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#UpdatePropertieButton').click(function (e) {
                e.preventDefault();
                var propertieId = $('input[name="Id"]').val();

                console.log('Propertie ID:', propertieId);

                var updatedPropertie = {
                    Id: propertieId,
                    Title: $('#titleInput').val(),
                    Image: $('#imageInput').val(),
                    Description: $('#descriptionInput').val(),
                    Address: $('#addressInput').val(),
                    Price: $('#priceInput').val(),
                    PropertyType: $('#propertyTypeInput').val(),
                    Status: $('#statusInput').val(),
                    OwnerId: $('#ownerIdInput').val()
                };

                $.ajax({
                    url: 'https://localhost:7012/Propertie/UpdatePropertie/' + propertieId,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(updatedPropertie),
                    success: function () {
                        alert('Propertie updated successfully');
                        window.location.href = '/Properties';
                    },
                    error: function (error) {
                        console.log('Error:', error);
                        alert('An error occurred while updating the propertie.');
                    }
                });
            });
        });
    </script>
}
