@using RealEase.Domain.Entities
@model User

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-success mb-4">Detalles del Usuario</h1>
<hr />

<div class="card shadow-sm border-0">
    <div class="card-body bg-white rounded-3">
        <h4 class="text-secondary">Información del Usuario</h4>
        <dl class="row">
            <dt class="col-sm-3 text-primary">
                Nombres
            </dt>
            <dd class="col-sm-9">
                @Model.FirstName
            </dd>

            <dt class="col-sm-3 text-primary">
                Apellidos
            </dt>
            <dd class="col-sm-9">
                @Model.LastName
            </dd>

            <dt class="col-sm-3 text-primary">
                Correo Electrónico
            </dt>
            <dd class="col-sm-9">
                @Model.Email
            </dd>

            <dt class="col-sm-3 text-primary">
                Teléfono
            </dt>
            <dd class="col-sm-9">
                @Model.PhoneNumber
            </dd>

            <dt class="col-sm-3 text-primary">
                Contraseña (Hash)
            </dt>
            <dd class="col-sm-9">
                @Model.PasswordHash
            </dd>

            <dt class="col-sm-3 text-primary">
                Rol
            </dt>
            <dd class="col-sm-9">
                @Model.Role
            </dd>

            <dt class="col-sm-3 text-primary">
                ¿Está Activo?
            </dt>
            <dd class="col-sm-9">
                @Model.IsActive 
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>
