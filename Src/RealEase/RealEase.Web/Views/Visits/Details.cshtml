@using RealEase.Domain.Entities
@model Visit

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Visit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            PropertyId
        </dt>
        <dd class="col-sm-10">
            @Model.PropertyId
        </dd>
        <dt class="col-sm-2">
            UserId
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            VisitDate
        </dt>
        <dd class="col-sm-10">
            @Model.VisitDate
        </dd>
        <dt class="col-sm-2">
            Status
